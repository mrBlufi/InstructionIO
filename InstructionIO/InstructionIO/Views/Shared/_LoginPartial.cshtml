@if (SignInManager.IsSignedIn(User))
{
     
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-form navbar-right">

                <ul>
                    <li class="dropdown ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><img id="img_prof" src="https://st2.depositphotos.com/1063693/10677/v/950/depositphotos_106775558-stock-illustration-flete-guy-man-woman-avatar.jpg" /><span class="caret"></span></a>
