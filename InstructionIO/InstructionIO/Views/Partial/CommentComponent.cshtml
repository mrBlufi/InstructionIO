<div class="block"><p>sdfsdf</p></div>
    <div class="container-fluid">
        @*<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">*@
        <div class="row">
            <div *ngIf="roleinfo.id!=-1"
                 class="cl-md-12 addcomment panel panel-white post panel-shadow">
                <h4><i class="fa fa-paper-plane-o"></i> Leave a Comment:</h4>
                <div id="editor" [froalaEditor] [(froalaModel)]="editorContent"></div>

                <div class="submit">
                    <button (click)="submit()" type="submit" name="say" value="" class="btn"><i class="fa fa-reply"></i> Submit</button>
                </div>
            </div>
          
        
            <div class="col-md-12" *ngFor="let com of comments">
                <div class="panel panel-white post panel-shadow">
                    <div class="post-heading">
                        <div class="pull-left image">
                            
                            <img *ngIf="!com.author.avatar" src="http://minionomaniya.ru/wp-content/uploads/2016/01/%D0%9A%D0%B5%D0%B2%D0%B8%D0%BD.jpg" class="img-circle avatar" alt="user profile image">
                            <img *ngIf="com.author.avatar" src="{{com.author.avatar}}" class="img-circle avatar" alt="user profile image">
                        </div>
                        <div class="pull-left meta">
                            <div class="title h5">
                                <a href="#"><b>{{com.author.fullName}}</b></a>
                            </div>
                            <h6 class="text-muted date">{{com.dateCreate | date:'MM/dd/yyyy'}}</h6>
                        </div>
                        <div *ngIf="roleinfo.id==com.author.id" class="pull-right meta">
                            
                            <i (click)="delcomment(com.id)" class="glyphicon glyphicon-remove"></i>
                        </div>
                    </div>
                    <div class="post-description" >
                        <div [froalaView]="com.context"></div>
                       
                    </div>
                </div>
            </div>
           
           
        </div>

    </div>
